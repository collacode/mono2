{
  "compilerOptions": {
      "target": "ES5",
      "useDefineForClassFields": true,
      "lib": ["ES2015"],
      "module": "CommonJS",
      "skipLibCheck": true,
      "incremental": true,

      /* Bundler mode */
      "isolatedModules": true,
      "noEmit": false,

      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,

  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
