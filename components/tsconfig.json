{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable"],
        "useDefineForClassFields": true,
        /* Bundler mode */
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
