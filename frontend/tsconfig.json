{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "#/*": ["./*"]
        },
        "allowJs": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", ".next", "coverage", "**/*.json"]
}
