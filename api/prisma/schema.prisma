// This is your Prisma schema file,
// learn more about it in the docs	https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
	username	String @id
	avatarUrl	String
	nickname	String
	githubUrl	String
	blogUrl	String
	introText	String
	position	Position[]
	techStacks	TechStacks[]
	preferProjectType	ProjectType[]
	preferMeetingDay	MeetingDay[]
	employed	Boolean
	yearsOfWorkExperiences	Int
}

// Nest.js, Next.js, Prisma
model TechStacks{
	name String @id 
	users User[]
}

// "웹 프론트엔드" | "앱 프론트엔드" | "백엔드"
model Position{
	name	String @id
	users User[]
}

//"전체" | "창업" | "학습/취업"
model ProjectType{
	name	String @id
	users User[]
}

//"전체" | "주중" | "주말"
model MeetingDay{
	name	String @id
	users User[]
}